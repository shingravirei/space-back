{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "ESNext"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "NodeNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "ts-node": {
    "swc": true,
    "esm": true,
    "experimentalSpecifierResolution": "node",
  }
}